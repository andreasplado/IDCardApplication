            <TextBlock x:Name="textBlock1_Copy" Foreground="Azure" HorizontalAlignment="Left" Margin="436,107,0,0" TextWrapping="Wrap" Text="Filter" VerticalAlignment="Top" Width="39" Height="16"/>



